{
  "name": "eslint-plugin-authing-nestjs",
  "version": "1.0.7",
  "license": "MIT",
  "description": "ESLint rules for nestjs framework",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:pure": "eslint",
    "test": "npm run mocha -- src/**/*.spec.ts",
    "mocha": "node -r ts-node/register node_modules/mocha/bin/_mocha",
    "clean": "rimraf dist",
    "build": "tsc",
    "copy": "node scripts/copy.js",
    "release": "node scripts/release.js",
    "precommit": "node scripts/pre-commit.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/estree": "^0.0.50",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.1",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "lint-staged": "^12.3.2",
    "mocha": "^9.2.0",
    "node-console-colors": "^1.1.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^4.5.5"
  },
  "pre-commit": "precommit",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "keywords": [
    "eslint-plugin-authing-nestjs"
  ],
  "author": "https://github.com/authing",
  "repository": {
    "type": "git",
    "url": "https://github.com/Authing/eslint-plugin-nestjs.git"
  },
  "bugs": {
    "url": "https://github.com/Authing/eslint-plugin-nestjs/issues"
  },
  "homepage": "https://github.com/Authing/eslint-plugin-nestjs#readme"
}