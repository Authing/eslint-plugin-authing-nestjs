{
  "name": "eslint-plugin-authing-nestjs",
  "version": "0.0.5-alpha.2",
  "license": "MIT",
  "description": "ESLint rules for nestjs framework",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "npm run mocha -- src/**/*.spec.ts",
    "mocha": "node -r ts-node/register node_modules/mocha/bin/_mocha",
    "clean": "rimraf dist",
    "build": "tsc",
    "lint": "eslint --ext .ts src/**.ts",
    "lint:fix": "eslint --fix --ext .ts src/**.ts"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@types/estree": "^0.0.50",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-plugin-add-module-exports": "^1.0.4",
    "eslint": "^8.8.0",
    "lint-staged": "^12.3.2",
    "mocha": "^9.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^4.5.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "keywords": [
    "eslint-plugin-authing-nestjs"
  ],
  "author": "https://github.com/authing",
  "repository": {
    "type": "git",
    "url": "https://github.com/Authing/eslint-plugin-nestjs.git"
  },
  "bugs": {
    "url": "https://github.com/Authing/eslint-plugin-nestjs/issues"
  },
  "homepage": "https://github.com/Authing/eslint-plugin-nestjs#readme"
}
