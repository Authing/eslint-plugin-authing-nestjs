{
  "compilerOptions": {
    "target": "es2015",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}